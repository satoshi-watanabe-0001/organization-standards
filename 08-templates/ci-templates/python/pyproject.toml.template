[tool.coverage.run]
source = ["src"]
omit = [
    "*/tests/*",
    "*/test_*.py",
    "*/__pycache__/*",
    "*/site-packages/*",
    "*/__init__.py",
]

[tool.coverage.report]
# âœ… å¿…é ˆ: ã‚«ãƒãƒ¬ãƒƒã‚¸é–¾å€¤ï¼ˆçµ„ç¹”æ¨™æº–: 80%ï¼‰
fail_under = 80

precision = 2
show_missing = true
skip_covered = false

exclude_lines = [
    "pragma: no cover",
    "def __repr__",
    "raise AssertionError",
    "raise NotImplementedError",
    "if __name__ == .__main__.:",
    "if TYPE_CHECKING:",
    "@abstract",
]

[tool.coverage.html]
directory = "htmlcov"

# ========================================
