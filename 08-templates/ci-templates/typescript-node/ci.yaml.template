name: CI Pipeline

on:
  push:
    branches: [main, develop, 'feature/**', 'bugfix/**']
  pull_request:
    branches: [main, develop]

jobs:
  build:
    name: Build and Test
    runs-on: ubuntu-latest
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v3
        with:
          fetch-depth: 0
      
      - name: Setup Node.js ${NODE_VERSION}
        uses: actions/setup-node@v3
        with:
          node-version: '${NODE_VERSION}'
          cache: 'npm'
      
      - name: Install dependencies
        run: npm ci
      
      # âœ… å¿…é ˆ: Lintå®Ÿè¡Œ
      - name: Run Lint
        run: npm run lint
      
      # âœ… å¿…é ˆ: Format Checkå®Ÿè¡Œï¼ˆã‚³ãƒ¼ãƒ‰ãƒ•ã‚©ãƒ¼ãƒãƒƒãƒˆãƒã‚§ãƒƒã‚¯ï¼‰
      - name: Check Code Formatting
        run: npm run format:check
      
      # âœ… å¿…é ˆ: Type Checkå®Ÿè¡Œ
      - name: Type Check
        run: npm run type-check
      
      # âœ… å¿…é ˆ: Buildå®Ÿè¡Œ
      - name: Build
        run: npm run build
      
      # âœ… å¿…é ˆ: Testå®Ÿè¡Œï¼ˆã‚«ãƒãƒ¬ãƒƒã‚¸é–¾å€¤ãƒã‚§ãƒƒã‚¯å«ã‚€ï¼‰
      - name: Run Tests with Coverage
        run: npm run test:coverage
      
      # ğŸŸ¡ æ¨å¥¨: ã‚«ãƒãƒ¬ãƒƒã‚¸ãƒ¬ãƒãƒ¼ãƒˆã®ã‚¢ãƒƒãƒ—ãƒ­ãƒ¼ãƒ‰
      - name: Upload Coverage Report
        if: always()
        uses: actions/upload-artifact@v3
        with:
          name: coverage-report
          path: coverage/
      
      # ğŸŸ¡ æ¨å¥¨: ãƒ“ãƒ«ãƒ‰ã‚¢ãƒ¼ãƒ†ã‚£ãƒ•ã‚¡ã‚¯ãƒˆã®ã‚¢ãƒƒãƒ—ãƒ­ãƒ¼ãƒ‰
      - name: Upload Build Artifacts
        if: success()
        uses: actions/upload-artifact@v3
        with:
          name: build-artifacts
          path: dist/
